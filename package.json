{
  "name": "geoplatform",
  "version": "2.4.3",
  "private": true,
  "description": "Core API and processing tools for geo.data.gouv.fr",
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "start:web": "node server.js",
    "start:worker": "node worker.js",
    "seed": "node scripts/seed"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "@etalab/fr-bounding-boxes": "^0.1.3",
    "@sentry/node": "^4.6.4",
    "@turf/turf": "^5.1.6",
    "@tusbar/cache-control": "^0.3.1",
    "bbox-match": "^0.1.0",
    "bluebird": "^3.5.3",
    "bull": "^3.7.0",
    "bull-manager": "^1.1.4",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "csv-parse": "^4.3.4",
    "csw-client": "^0.18.2",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "elasticsearch": "^15.4.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "file-type": "^11.0.0",
    "fresh": "^0.5.2",
    "got": "^9.6.0",
    "handlebars": "^4.1.0",
    "hasha": "^3.0.0",
    "ioredis": "^4.6.2",
    "ipaddr.js": "^1.9.0",
    "json-stable-stringify": "^1.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.18",
    "morgan": "^1.9.1",
    "ms": "^2.1.1",
    "natural": "^0.6.3",
    "on-finished": "^2.3.0",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.4.0",
    "pump": "^3.0.0",
    "stream-each": "^1.2.3",
    "through2": "^3.0.1",
    "tldjs": "^2.0.0",
    "underscore.string": "^3.3",
    "urijs": "^1.16.1",
    "wfs-client": "^0.4.1"
  },
  "devDependencies": {
    "codecov": "^3.3.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "json2mongo": "^2.0.0",
    "lerna-changelog": "^0.8.2",
    "xo": "^0.24.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__helpers__/",
      "/__fixtures__/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/tests/junit.xml"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server.js",
      "worker.js",
      "lib/**/*.js",
      "plugins/**/*.js",
      "france/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "warn",
      "unicorn/filename-case": "warn",
      "unicorn/no-process-exit": false
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "bug": ":bug: Bug Fix",
      "cleanup": ":shower: Cleanup",
      "documentation": ":memo: Documentation",
      "enhancement": ":rocket: Enhancement",
      "performance": ":racehorse: Performance",
      "security": ":policeman: Security",
      "dependencies": ":arrow_up: Dependencies"
    },
    "repo": "geodatagouv/geoplatform"
  }
}
