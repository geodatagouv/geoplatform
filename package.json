{
  "name": "geoplatform",
  "version": "1.0.0",
  "public": false,
  "description": "Core API and processing tools for geo.data.gouv.fr",
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "start:web": "node server.js",
    "start:worker": "node worker.js",
    "seed": "node scripts/seed"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "@etalab/fr-bounding-boxes": "^0.1.3",
    "@turf/turf": "^5.1.6",
    "bbox-match": "^0.1.0",
    "bluebird": "^3.3.0",
    "connect-mongo": "^2.0.0",
    "cors": "^2.5.2",
    "csv-parse": "^1.2.0",
    "csw-client": "^0.15.0",
    "debug": "^2.1.2",
    "del": "^3.0.0",
    "delayed-jobs": "^0.1.0",
    "dotenv": "^5.0.1",
    "express": "^4.11.2",
    "express-session": "^1.15.6",
    "file-type": "^5.2.0",
    "fresh": "^0.5.0",
    "got": "^9.2.2",
    "handlebars": "^4.0.5",
    "hasha": "^3.0.0",
    "ipaddr.js": "^1.0.1",
    "json-stable-stringify": "^1.0.0",
    "lodash": "^4",
    "moment": "^2.14.1",
    "mongodb": "^3.0.8",
    "mongoose": "^5.0.2",
    "morgan": "^1.5.1",
    "natural": "^0.5.4",
    "ogr2ogr": "^1.3.0",
    "on-finished": "^2.3.0",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.4.0",
    "pump": "^3.0.0",
    "raven": "^2.6.4",
    "request": "^2.79.0",
    "stream-each": "^1.2.3",
    "superagent": "^3.5.2",
    "through2": "^2.0.3",
    "tldjs": "^2.0.0",
    "underscore.string": "^3.0",
    "unzipper": "^0.9.3",
    "urijs": "^1.16.1",
    "wfs-client": "^0.3.0"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "lerna-changelog": "^0.8.0",
    "xo": "^0.20.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__helpers__/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/tests/junit.xml"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server.js",
      "worker.js",
      "lib/**/*.js",
      "plugins/**/*.js",
      "france/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "bug": ":bug: Bug Fix",
      "cleanup": ":shower: Cleanup",
      "documentation": ":memo: Documentation",
      "enhancement": ":rocket: Enhancement",
      "performance": ":racehorse: Performance",
      "security": ":policeman: Security"
    },
    "repo": "geodatagouv/geoplatform"
  }
}
