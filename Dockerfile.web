# 1/2 Create build image
FROM node:10-alpine AS build

RUN mkdir -p /opt/geoplatform-web
WORKDIR /opt/geoplatform-web

COPY package.json yarn.lock ./
RUN yarn --production --frozen-lockfile

# 2/2 Create production image
FROM node:10-alpine
ARG SOURCE_COMMIT=unknown

RUN apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/main libcrypto1.1 && \
    apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing gdal

RUN mkdir -p /opt/geoplatform-web
WORKDIR /opt/geoplatform-web

COPY --from=build /opt/geoplatform-web .
COPY . .

ENV NODE_ENV=production \
    SENTRY_DSN_FILE=sentry_dsn \
    SENTRY_RELEASE=${SOURCE_COMMIT}

RUN mkdir -p /opt/bin
COPY docker/scripts/entrypoint.sh /opt/bin/

EXPOSE 5000
ENTRYPOINT ["/opt/bin/entrypoint.sh"]
CMD ["node", "server.js"]
